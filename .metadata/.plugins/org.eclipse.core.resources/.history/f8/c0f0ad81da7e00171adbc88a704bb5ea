package linked;

public class MiscProb {
	
	public static int findMedianCircularList(LinkedList.Node start){
		LinkedList.Node p = start.next;
		int length = 1;
		while (p != start) {
			length++;
			p = p.next;
		}
		while (p.data < p.next.data) {
			p = p.next;
		}
		p = p.next;
		// p contains the head of the list at this point. 
		int i = 0;
		while (i < Math.round(length / 2)) {
			i++;
			p = p.next;
		}
		if (length % 2 == 1)
			return p.data;
		else
			return (p.data + p.next.data)/2;
	}

}
